# Server Configuration
PORT=8080

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_NAME=gosim

# Application Configuration
APP_ENV=development
LOG_LEVEL=info
APP_VERSION=1.0.0

# Upstream Services
LLM_SVC_URL=http://localhost:8081
SIMULATION_ENGINE_URL=http://localhost:8082
OLLAMA_URL=http://localhost:11434

# RAG Configuration
RAG_SNIPPETS_DIR=internal/design_input_processing/rag/snippets

# Firebase Configuration
# Path to Firebase service account JSON file
# Download from Firebase Console: Project Settings > Service Accounts > Generate New Private Key
FIREBASE_CREDENTIALS_PATH=./firebase-service-account.json
# Optional: Firebase Project ID (usually included in credentials file)
FIREBASE_PROJECT_ID=your-project-id

# Redis Configuration
# Redis host address
REDIS_HOST=localhost
# Redis port (default: 6379)
REDIS_PORT=6379
# Redis password (leave empty if no password is set)
REDIS_PASSWORD=
# Redis database number (0-15, default: 0)
REDIS_DB=0

# API Key (for design-input endpoints)
API_KEY=super-secret-key-123

# ============================================================================
# Simulation Engine Callbacks
# ============================================================================
# URL for simulation engine to call back to when runs complete
SIMULATION_CALLBACK_URL=http://localhost:8080/api/v1/simulation/callbacks/run
# Optional secret for authenticating callbacks (leave empty to disable auth)
SIMULATION_CALLBACK_SECRET=

# ============================================================================
# Test Database Configuration (Optional - for Integration Tests)
# ============================================================================
# These variables are used for running integration tests that require PostgreSQL
# If not set, tests will fall back to using the main database configuration above

# Option 1: Set complete DSN directly (recommended for tests)
# TEST_DB_DSN=host=localhost port=5432 user=postgres password=test_password dbname=gosim_test sslmode=disable

# Option 2: Set individual test database variables (alternative)
# TEST_DB_HOST=localhost
# TEST_DB_PORT=5432
# TEST_DB_USER=postgres
# TEST_DB_PASSWORD=test_password
# TEST_DB_NAME=gosim_test

# Note: It's recommended to use a separate test database (e.g., gosim_test)
# to avoid affecting your development data during test runs.
# See docs/testing-setup.md for more details on running integration tests.
